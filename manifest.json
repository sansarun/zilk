{
    "manifest_version": 2,

    "name": "zilk",
    "version": "0.1",

    "permissions": [
        "storage",
        "https://www.facebook.com/"
    ],
    
    "content_scripts": [
        {
            "matches": ["https://www.facebook.com/*"],
            "js": ["contentScript.js"]
        }
    ],

    "browser_action": {
        "default_icon": "images/icon.png",
        "default_title": "Zilk",
        "default_popup": "popup.html"
    }
}
